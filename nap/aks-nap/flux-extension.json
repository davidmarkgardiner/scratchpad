{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "clusterName": {
      "type": "string",
      "metadata": {
        "description": "Name of the AKS cluster"
      }
    },
    "resourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the resource group"
      }
    },
    "extensionName": {
      "type": "string",
      "defaultValue": "flux",
      "metadata": {
        "description": "Name of the extension"
      }
    },
    "releaseTrain": {
      "type": "string",
      "defaultValue": "stable",
      "metadata": {
        "description": "Release train for the extension"
      }
    },
    "version": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Specific version of the extension to install"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.KubernetesConfiguration/extensions",
      "apiVersion": "2024-11-01",
      "name": "[concat(parameters('clusterName'), '/Microsoft.KubernetesConfiguration/', parameters('extensionName'))]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "extensionType": "microsoft.flux",
        "autoUpgradeMinorVersion": true,
        "releaseTrain": "[parameters('releaseTrain')]",
        "version": "[parameters('version')]",
        "configurationSettings": {
          "tolerationKeys": "CriticalAddonsOnly",
          "tolerationValues": "true",
          "tolerationEffects": "NoSchedule",
          "nodeSelector": "kubernetes.azure.com/scalesetpriority=system",
          "affinity": {
            "nodeAffinity": {
              "requiredDuringSchedulingIgnoredDuringExecution": {
                "nodeSelectorTerms": [
                  {
                    "matchExpressions": [
                      {
                        "key": "kubernetes.azure.com/scalesetpriority",
                        "operator": "In",
                        "values": ["system"]
                      }
                    ]
                  }
                ]
              }
            }
          }
        },
        "scope": {
          "cluster": {
            "releaseNamespace": "flux-system"
          }
        }
      }
    }
  ]
} 